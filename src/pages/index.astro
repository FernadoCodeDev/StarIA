---
import "../styles/global.css";
import Header from "../layouts/Header.astro";
import NavBar from "../layouts/Navbar";

import Hourglass from "../components/ui/Hourglass";
import Chat from "../components/chat/Chat"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image" href="/img/Logo.webp"/>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>StarIA</title>
  </head>
  <body class="text-zinc-950 bg-slate-100 dark:text-slate-100 dark:bg-zinc-950">
    <div class="flex flex-row min-h-screen">
      <NavBar client:load />

      <main class="flex flex-col flex-1 w-full min-h-screen">
        <Header />

        <div class="flex items-center justify-center flex-1">
          <section
            class="flex flex-col items-center gap-4 w-full max-w-[50rem] p-4"
          >
            <div class="flex-col items-center hidden gap-4 text-center loading">
              <Hourglass />
              <h1>Esto puede tardar un poco...</h1>
            </div>

           <Chat client:load />
         
          </section>
        </div>
      </main>
    </div>
  </body>
</html>
